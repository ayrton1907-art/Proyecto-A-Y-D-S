<head>
  <meta charset="utf-8">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel="stylesheet"/>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>
</head>
<% if  @errormsg  %>
    <div class="alert alert-success" role="alert">
      <%= @errormsg %>
    </div>
<% end %>
<form id="form" method="post" action="create_document" enctype="multipart/form-data">
  <div class="row">
    <div class="container col-xl-4">
      <div class="backgroundFroms col-xl-10  text-center">
        <div class="form-group">
          <label>Nombre del documento:</label>
          <input id="input" type="text" class="form-control backgroundImput" name="name"placeholder="Input the name document" required>
        </div>
        <div class="form-group">
          <label>Descripcion del document:</label>
          <input type="text" class="form-control backgroundImput" name="description" placeholder="Input the description" required>
        </div>
        <div class="row">
          <div class="container col-12 form-group m-auto">
            <input type="button"  value="Seleccione un archivo" id="buttonIndex" class="buttonIndex" onclick="document.getElementById('file').click();"  required/>
            <input type="file" style="display:none;" id="file" name="PDF" accept=".pdf" required />
            <button id="buttonIndex" type="submit">Subir</button>
          </div>
        </div>
      </div>
    </div>
    <div class="container col-xl-4">
      <div class="backgroundFroms col-xl-10">
        <select class="form-control mi-selector" name='cat'>
          <%@categories && @categories.each do |element| %>
            <option value='<%= element.id%>'><%= element.name%></option>
          <% end %>
        </select>
      </div>
    </div>
    <div class="container col-xl-4">
      <div class="backgroundFroms col-xl-10">
        <select class="col-xl-10 form-control mi-selector" name='mult[]' multiple='multiple'>
          <%@userCreate && @userCreate.each do |element| %>
           <option  value = "<%= element.id%>" > <%= element.name%> </option>
          <% end %>
        </select>
      </div>
    </div>
    <div class="container col-xl-4">
      <div class="backgroundFroms col-xl-10">
        <select class="col-xl-10 form-control mi-selector" name='dni[]' multiple='multiple'>
          <%@userCreate && @userCreate.each do |element| %>
           <option  value = "<%= element.id%>" > <%= element.dni%> </option>
          <% end %>
        </select>
      </div>
    </div>
  </div>
</form>


<script type="text/javascript">
jQuery(document).ready(function($){
  $(document).ready(function() {
      $('.mi-selector').select2();
  });
});
</script>
