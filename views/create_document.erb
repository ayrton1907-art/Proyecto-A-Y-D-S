<head>
  <link rel='stylesheet prefetch' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css'>
  <link rel='stylesheet prefetch' href='https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.11.2/css/bootstrap-select.min.css'>
</head>
<% if  @errormsg  %>
<div class="alert alert-success" role="alert">
  <%= @errormsg %>
</div>
<% end %>
<form id="form" method="post" action="create_document" enctype="multipart/form-data">
  <div class="row">
    <div class="container col-xl-4">
      <div class="backgroundFroms col-xl-10  text-center">
        <div class="form-group">
          <label>Nombre del documento:</label>
          <input type="text" class="form-control backgroundImput" name="name"placeholder="Input the name document" required>
        </div>
        <div class="form-group">
          <label>Descripcion del document:</label>
          <input type="text" class="form-control backgroundImput" name="description" placeholder="Input the description" required>
        </div>
        <div class="row">
          <div class="container col-12 form-group m-auto">
            <input type="button"  value="Seleccione un archivo" id="buttonIndex" class="buttonIndex" onclick="document.getElementById('file').click();"  required/>
            <input type="file" style="display:none;" id="file" name="PDF" accept=".pdf" required />
            <button id="buttonIndex" type="submit">Subir</button>
          </div>
        </div>
      </div>
    </div>
    <div class="container col-xl-4">
      <div class="backgroundFroms col-xl-10">
        <select class="selectpicker" data-show-subtext="true" data-live-search="true" name="cat">
          <%@categories && @categories.each do |element| %>
            <option value='<%= element.id%>'><%= element.name%></option>
          <% end %>
        </select>
      </div>
    </div>
    <div class="container col-xl-4">
      <div class="backgroundFroms col-xl-10">
        <select class="selectpicker show-menu-arrow" data-style="form-control" data-live-search="true" title="-- Selecciona los usuarios --" multiple="multiple" name="mult[]">
         <%@userCreate && @userCreate.each do |element| %>
          <option class=""  value = "<%= element.id%>" > <%= element.name%> </option>
         <% end %>
        </select>
      </div>
    </div>
  </div>
</form>
