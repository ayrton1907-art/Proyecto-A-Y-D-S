<% if @errormsg %>
  <div class="alert alert-success" role="alert">
    <%= @errormsg %>
  </div>
<% end %>
<form for="validation01" method="POST" action="/editNewUser">
  <div class="row">
    <div class="container col-xl-6">
      <div class="row">
        <nav class="container col-xl-8 text-center backgroundFromsB">
          <div class="text-center">
            <img class="imagen1" src="/index.png">
          </div>
          <div class="text-center">
            <button class="buttonForm" type="submit">Guardar</button>
          </div>
        </nav>
      </div>
    </div>
    <div class="container col-xl-6">
      <div class="row">
        <nav class="container col-xl-8 backgroundFromsB">
          <div class="form-group">
            <label class="marginLavel">Nombre</label>
            <input type="text" class="form-control backgroundImput" name="name"placeholder="<%= @userName.name %>">
          </div>
          <div class="form-group">
            <label class="marginLavel">Apellido</label>
            <input type="text" class="form-control backgroundImput" name="surname" placeholder="<%= @userName.surname %>">
          </div>
          <div class="form-group">
            <label class="marginLavel">DNI</label>
            <input type="number" class="form-control backgroundImput"  name="dni"placeholder="<%= @userName.dni %>">
          </div>
          <div class="form-group">
            <label class="marginLavel">Email</label>
            <input type="email" class="form-control backgroundImput"  name="email"placeholder="<%= @userName.email %>">
          </div>
          <div class="form-group">
            <label class="marginLavel">Contrase√±a</label>
            <input type="password" class="form-control backgroundImput" name="password" placeholder="**********">
          </div>
          <div class="form-group">
            <label>Rol</label>
            <select class="form-control backgroundImput" name="rol">
              <option value="Estudiante">Estudiante</option>
              <option value="Profesor">Docente</option>
              <option value="No docente">No Docente</option>
              <option value="Administrativo">Administrativo</option>
            </select>
          </div>
        </nav>
      </div>
    </div>
  </div>
</form>
