<div class="row">
  <% if @modDocument %>
  <div class="card-image col l8 m12 ">
    <embed  src="<%= @modDocument.fileDocument%>" type="application/pdf" width="100%" height="500px" />
    </div>
    <div class="card-image col l4 m12">
      <form class="card-body" for="validation01" method="post" action="/modify_document">
        <input type="hidden" name="theId" value="<%=@modDocument.id%>">
        <h4 class="section center">Editar Documento</h4>
        <div class="divider light-blue lighten-2"></div>
        <div class="form-group">
          <label class="black-text">Nombre del documento:</label>
          <input value="<%=@modDocument.name%>" type="text" name="newName">
        </div>
        <div class="form-group">
          <label class="black-text">Descripcion del documento:</label>
          <input type="text"  value="<%=@modDocument.description%>" name="description">
        </div>
        <div class="form-group">
          <select  class="form-control mi-selector" name='cate'>
            <option value="<%=@modCat.id%>" selected><%=@modCat.name%></option>
            <%@allCategory && @allCategory.each do |element| %>
            <option value="<%= element.id%>"><%= element.name%></option>
            <% end %>
          </select>
          <select name='mult[]' multiple>
            <%@usersTag && @usersTag.each do |element| %>
              <option value="<%=element.id%>" selected><%=element.name%></option>
            <% end %>
            <%@usersName && @usersName.each do |element| %>
              <option value= "<%= element.id%>"> <%= element.name%> </option>
            <% end %>
          </select>
        </div>
        <div class="divider light-blue lighten-2"></div>
         <div class="section"></div>
        <div class="form-group center">
          <button class="btn-large blue lighten-3  waves-effect waves-light black-text z-depth-3" type="submit">Guardar</button>
        </div>
    </form>
  </div>
  <% end %>
</div>
