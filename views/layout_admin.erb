  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  <!--JavaScript con SideNav y WebSocket -->
  <script type="text/javascript" src="./scripts/myscript.js"></script>
  </body>
</html>
