<form  class="row backgroundHs" action="/all_document" method="get">
  <div class="col-xl-3">
    <a id="buttonIndexDocA" class="nav-link" href="/create_document" role="button">Nuevo</a>
  </div>
  <div class="col-xl-6 text-center">
    <input type="text" class="form-control backgroundImput" name="filter" placeholder="Input the name document">
  </div>
  <div class="col-xl-3 text-center">
    <button id="buttonIndexDocB" type="submit" class="buttonForm nav-link" type="submit">Search</button>
  </div>
</form>
<div class="row">
    <%@allPdf && @allPdf.each do |element| %>
    <div class="col-xl-4">
      <form class="col-xl-10 elementColor" action="/selected_document" method="post">
        <a href="#" class="list-group-item list-group-item-action flex-column align-items-start  backgroundDoc">
          <embed src="<%=element.fileDocument%>#toolbar=0&navpanes=0&scrollbar=0" type="application/pdf" width="100%" height="100%" />
            <div class="d-flex w-100 justify-content-between">
              <input type="hidden" name="pdf" value="<%=element.id%>"></input>
              <h5 class="mb-1">Nombre: <%= element.name%></h5>
              <small class="text-muted"><%= element.date%></small>
            </div>
            <p class="mb-1"><%= element.description%></p>
            <div class=" text-center">
              <button id="buttonIndex" type="submit">Edit</button>
            </div>
          </a>
      </form>
    </div>
  <% end %>
</div>
