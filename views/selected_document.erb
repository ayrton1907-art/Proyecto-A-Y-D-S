<form method="post" action="modify_document">
  <%@pdfD = Document.find(id: params[:pdf])%>
  <input type="hidden" name="theId" value="<%=@pdfD.id%>">
  <div class="row">
    <div class="container col-xl-4">
      <div class="backgroundFroms col-xl-12">
        <div class="form-group">
          <label>Nombre actual:<%=@pdfD.name%></label>
          <input type="text" class="form-control backgroundImput" name="name"placeholder="Ingrese el Nombre">
        </div>
        <div class="form-group">
          <label>Descripción actual: <%=@pdfD.description%></label>
          <input type="text" class="form-control backgroundImput" name="description" placeholder="Ingrese la Descripción">
        </div>
        <div class="row">
          <div class="container col-6 form-group m-auto">
            <button id="buttonIndex" type="submit">Editar</button>
          </div>
        </div>
      </div>
    </div>
    <div class="container col-xl-4">
      <div class="backgroundFroms col-xl-10">
        <% @allCat.each do |element| %>
          <input type="radio" name="cat" value="<%= element.id%>"><%= element.name%>
          <br>
        <% end %>
      </div>
    </div>
    <div class="container col-xl-4">
      <div class="backgroundFroms col-xl-10">
        <% @userCreate.each do |element| %>
          <input type="checkbox" name="mult[]"" value="<%= element.id%>"><%= element.name%>
          <br>
        <% end %>
      </div>
    </div>
  </div>
</form>
